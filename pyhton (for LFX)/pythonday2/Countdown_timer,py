import time

time_asked_by_user= int(input("enter the time in seconds "))

for x in range (time_asked_by_user , 0 , -1) :# here we are starting from the time which is given by the user and then taking it towards 0 by decrementing -1 each step 
    seconds = x % 60
    minutes = int(x / 60)
    hours = int (x/3600)
    timer = (f"{hours:02}:{minutes:02}:{seconds:02}")
    time.sleep(1)
    print(timer)
